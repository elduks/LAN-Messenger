<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arachnisapps.lanmessenger.Messaging">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="332dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:maxLines = "30"
        android:scrollbars = "vertical"
        android:id="@+id/chatarea"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/messagetext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/messagetext"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/chatarea"
        android:layout_marginBottom="51dp"
        android:layout_alignEnd="@+id/sendmessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/sendmessage"
        android:layout_below="@+id/chatarea"
        android:layout_alignEnd="@+id/chatarea" />
</RelativeLayout>
